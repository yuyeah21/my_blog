<!DOCTYPE html>
<html>
  <head>
    <title>MyBlog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-3">
     <div class="container">
       <%= link_to "My blog", root_path, class: "navbar-brand" %>
       <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="ナビゲーションの切替">
         <span class="navbar-toggler-icon"></span>
       </button>
       <div class="collapse navbar-collapse" id="navbarText">
         <ul class="navbar-nav ml-auto">
           <li class="nav-item">
             <!-- ★★★★下記の#を後ほど正しいURLに変更 -->
             <%= link_to "投稿する", new_post_path, class: "nav-link" %>
           </li>
         </ul>
       </div>
     </div>
   </nav>
   <div class="container">
     <%= yield %>
   </div>
  </body>
</html>
